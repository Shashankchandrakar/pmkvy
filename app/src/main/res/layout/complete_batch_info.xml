<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bd_scrollview"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/bd_title"
                style="@style/complete_center_info_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Batch Detail" />

            <View style="@style/horizontal_line_completed" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="14dp"
                android:weightSum="10">

                <TextView
                    style="@style/complete_center_detail_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:id="@+id/center_name_deatils"
                    android:text="Center Name" />

                <TextView
                    android:id="@+id/bd_center_name"
                    style="@style/complete_center_detail_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:text="" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="14dp"
                android:weightSum="10">

                <TextView
                    style="@style/complete_center_detail_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:text="Course Name" />

                <TextView
                    android:id="@+id/bd_course_name"
                    style="@style/complete_center_detail_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:text="" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="14dp"
                android:weightSum="10">

                <TextView
                    style="@style/complete_center_detail_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/job_role_"
                    android:layout_weight="6"
                    android:text="Job Role" />

                <TextView
                    android:id="@+id/bd_jobrole"
                    style="@style/complete_center_detail_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="4" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="14dp"
                android:weightSum="10">

                <TextView
                    style="@style/complete_center_detail_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:text="Job Sector" />

                <TextView
                    android:id="@+id/bd_jobsector"
                    style="@style/complete_center_detail_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="4" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="14dp"
                android:weightSum="10">

                <TextView
                    style="@style/complete_center_detail_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:text="No. of seats available" />

                <TextView
                    android:id="@+id/bd_no_of_seats"
                    style="@style/complete_center_detail_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="4" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="14dp"
                android:weightSum="10">

                <TextView
                    style="@style/complete_center_detail_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:text="Last date for Registration" />

                <TextView
                    android:id="@+id/bd_lastdate"
                    style="@style/complete_center_detail_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="4" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="14dp"
                android:weightSum="10">

                <TextView
                    style="@style/complete_center_detail_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:text="Assessement Date" />

                <TextView
                    android:id="@+id/bd_assessement_date"
                    style="@style/complete_center_detail_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="4" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:padding="6dp">

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/bd_button_register"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@color/colorButton"
                android:elevation="2dp"
                android:padding="12dp"
                android:text="Register in this Course" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>