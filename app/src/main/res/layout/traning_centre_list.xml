<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp"
    >

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            style="@style/training_center_list_card_layout">

            <TextView
                android:id="@+id/centre_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:text="LOLL"
                style="@style/training_center_list_card_title"/>

            <TextView
                android:id="@+id/centre_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/centre_name"
                android:clickable="true"
                android:text="LJHOH"
                style="@style/training_center_list_card_field" />

            <TextView
                android:id="@+id/centre_phone_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/centre_address"
                android:clickable="true"
                style="@style/training_center_list_card_field"
                android:text="PHONE" />

            <TextView
                android:id="@+id/centre_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/centre_phone_no"
                android:clickable="true"
                android:padding="5dp"
                android:text="INFO"
                android:visibility="gone" />

            <Button
                android:id="@+id/call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@android:color/holo_green_dark"
                android:shadowColor="@color/colorPrimary"
                android:text="Calll"
                android:visibility="gone" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>